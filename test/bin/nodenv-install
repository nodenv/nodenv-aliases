#!/usr/bin/env bash
#
# Summary: Fake install program
#
# Usage: nodenv-install version
#

set -e
[ -n "$NODENV_DEBUG" ] && set -x

declare -a after_hooks
after_install() {
  after_hooks+=("$1")
}

echo Sourcing install hooks
source "${BATS_TEST_DIRNAME}/../etc/nodenv.d/install"/*.bash

STATUS=0
VERSION_NAME=${1:?}

d="$NODENV_ROOT/versions/$1"
mkdir -p "$d"
echo "$1" > "$d/RELEASE.txt"
echo "Fake-Installed version $1"

echo Executing after_install hooks.
for hook in "${after_hooks[@]}"; do eval "$hook"; done
